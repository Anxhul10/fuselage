{
  "name": "@rocket.chat/fuselage-root",
  "private": true,
  "version": "0.31.1",
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "devDependencies": {
    "bump": "workspace:^",
    "husky": "^7.0.4",
    "hygen": "^6.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "turbo": "^1.0.24",
    "update-readme": "workspace:tools/update-readme",
    "webpack": "^5.41.1"
  },
  "scripts": {
    "postinstall": "husky install",
    "ci": "yarn turbo run build lint test build-storybook --cache-dir=\".turbo\" --ignore=\"packages/**/__snapshots__\"",
    "build": "yarn turbo run build --ignore=\"packages/**/__snapshots__\"",
    "lint": "yarn turbo run lint --ignore=\"packages/**/__snapshots__\"",
    "lint-and-fix": "yarn turbo run lint-and-fix --ignore=\"packages/**/__snapshots__\"",
    "test": "yarn turbo run test --ignore=\"packages/**/__snapshots__\"",
    "docs": "yarn workspaces foreach -v --topological-dev run docs",
    "build-storybook": "yarn turbo run build-storybook --cache-dir=\".turbo\" --ignore=\"packages/**/__snapshots__\"",
    "update-storybook": "yarn turbo run update-storybook --ignore=\"packages/**/__snapshots__\"",
    "storycap:ci": "yarn turbo run storycap:ci --cache-dir=\".turbo\" --concurrency=1 --ignore=\"packages/**/__snapshots__\"",
    "update-readme": "update-readme",
    "resolve-workspace-deps": "yarn workspace scripts run resolve-workspace-deps",
    "create-package": "hygen create-package"
  },
  "devEngines": {
    "node": "~14.17.6"
  },
  "volta": {
    "node": "14.17.6",
    "yarn": "1.22.11"
  },
  "packageManager": "yarn@3.1.0",
  "turbo": {
    "baseBranch": "origin/master",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "lint": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "update-storybook": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "build-storybook": {
        "dependsOn": [
          "build"
        ],
        "outputs": [
          "storybook-static/**"
        ]
      },
      "storycap:ci": {
        "outputs": []
      }
    }
  }
}
